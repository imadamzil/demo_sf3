{% extends 'base.html.twig' %}

{% block content %}
    <h1>Detailvirements list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Priorite</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for detailvirement in detailvirements %}
            <tr>
                <td><a href="{{ path('detailvirement_show', { 'id': detailvirement.id }) }}">{{ detailvirement.id }}</a></td>
                <td>{% if detailvirement.date %}{{ detailvirement.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ detailvirement.priorite }}</td>
                <td>{{ detailvirement.total }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('detailvirement_show', { 'id': detailvirement.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('detailvirement_edit', { 'id': detailvirement.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('detailvirement_new') }}">Create a new detailvirement</a>
        </li>
    </ul>
{% endblock %}
