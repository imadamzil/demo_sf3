{% extends 'base.html.twig' %}

{% block title %} Hope3k | facture {% endblock %}{% block menu %}  <a
        href="{{ path('facture_index') }}">facture</a>   {% endblock %}   {% block menu_active %}    Ajouter {% endblock %}{% block content %}

    {% if nb_non_factured_missions is not null and nb_non_factured_missions > 0 %}
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">
                <i class="ace-icon fa fa-times"></i>
            </button>

            <strong>
                <i class="ace-icon fa fa-times"></i>
                Attention! {{ nb_non_factured_missions }}
            </strong>

            Missions sans facture pour le mois <b>{{ mois }}</b>
            <a href="{{ path('mission_sans_facture') }}" class="btn btn-sm btn-danger">
                <i class="ace-icon fa fa-list bigger-110"></i>
                <span class="bigger-110 no-text-shadow">Liste</span>
            </a>
            <br>
        </div>
    {% endif %}
    <table class="table table-detail">
        <thead>
        <tr>
            <th>Id</th>
            <th>Etat</th>
            <th>Mois</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td><a href="{{ path('facture_show', { 'id': facture.id }) }}">{{ facture.id }}</a></td>
                <td>{{ facture.etat }}</td>
                <td>{{ facture.mois }}</td>
                <td>{% if facture.date %}{{ facture.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('facture_show', { 'id': facture.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('facture_edit', { 'id': facture.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('facture_new') }}">Create a new facture</a>
        </li>
    </ul>
{% endblock %}
