    <h1>Facture</h1>

    <table class="table table-detail">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ facture.id }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ facture.etat }}</td>
