{% extends 'base.html.twig' %}

{% block title %} Hope3k | BC Client {% endblock %}{% block menu %}  <a href="{{ path('bcclient_index') }}">BC Client</a>   {% endblock %}   {% block menu_active %}    Ajouter {% endblock %}{% block content %}
    <h1>Bcclients list</h1>

{%  if count ==0 %}
{% else %}
    <div class="alert alert-danger"> {{  count }} BC clients avec moins de 20 jours restants</div>

{% endif %}
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Date</th>
                <th>Nbjrs</th>
                <th>Nbjrsr</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bcclient in bcclients %}
            <tr>
                <td><a href="{{ path('bcclient_show', { 'id': bcclient.id }) }}">{{ bcclient.id }}</a></td>
                <td>{{ bcclient.code }}</td>
                <td>{% if bcclient.date %}{{ bcclient.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ bcclient.nbJrs }}</td>
                <td>{{ bcclient.nbJrsR }}</td>
                <td class="center">
                    <a href="{{ path('bcclient_show', { 'id': bcclient.id }) }}"><i class="icon-menu fa fa-search-plus blue bigger-140"></i></a>

                    <a href="{{ path('bcclient_edit', { 'id': bcclient.id }) }}"><i class="icon-menu fa fa-edit orange bigger-140"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bcclient_new') }}">Create a new bcclient</a>
        </li>
    </ul>
{% endblock %}
