    <table class="table table-detail">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ client.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ client.nom }}</td>
        </tr>
        <tr>
            <th>Tel</th>
            <td>{{ client.tel }}</td>
        </tr>
        <tr>
            <th>Fax</th>
            <td>{{ client.fax }}</td>
        </tr>
        <tr>
