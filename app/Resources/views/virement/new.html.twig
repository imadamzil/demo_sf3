{% extends 'base.html.twig' %}
{% block title %} Hope3k | Mission {% endblock %}

{% block menu %}  <a href="{{ path('virement_index') }}">Virement</a>   {% endblock %}

   {% block menu_active %}    Ajouter {% endblock %}
{% block content %}

    <div class="col-md-12  widget-container-col ui-sortable" id="widget-container-col-1">
        <div class="widget-box ui-sortable-handle" id="widget-box-1">
            <div class="widget-header">
                <h5 class="widget-title">Ajouter un Virment :</h5>

                <div class="widget-toolbar">
                    <div class="widget-menu">
                        <a href="{{ path('virement_index') }}">
                            <i class="ace-icon fa fa-bars"></i>
                        </a>

                    </div>

                    <a href="#" data-action="fullscreen" class="orange2">
                        <i class="ace-icon fa fa-expand"></i>
                    </a>


                    <a href="#" data-action="close">
                        <i class="ace-icon fa fa-times"></i>
                    </a>
                </div>
            </div>

            <div class="widget-body">
                <div class="widget-main">
                    <div class="row">
                        {{ form_start(form) }}
                        <div class="col-md-6 col-md-offset-3">
                            {{ form_row(form.bcfournisseur) }}

                            {{ form_row(form.consultant) }}
                            {{ form_row(form.code) }}
                        </div>


                    </div>
                    <div class="space"></div>
                    <hr>
                    <div class="row">
                        <div class="col-md-5 col-md-offset-1 border-right">

                            <div class="form-group"><label for="appbundle_virement_date" class="required">Date
                                    Virement</label>
                                <input type="text" id="appbundle_virement_date" name="appbundle_virement[date]"
                                       required="required" class="date-timepicker1 form-control "
                                       placeholder="MM/DD/YYYY">
                            </div>

                        </div>
                        <div class="col-md-3 col-md-offset-2 ">

                            <label for="spinner1">Prix Achat: </label>
                            <div class="input-group">
                                <input type="text" id="spinner1" name="appbundle_virement[achat]"
                                       class="spinbox-input form-control text-center spinner1">
                                <div class="spinbox-buttons input-group-btn btn-group-vertical">

                                </div>
                            </div>
<hr>
                            <div class="control-group">
                                <label class="control-label bolder ">Etat</label>

                                <div class="radio">
                                    <label>
                                        <input name="form-field-radio" type="radio" class="ace" value="validé" disabled>
                                        <span class="lbl"> Validé</span>
                                    </label>
                                </div>
                                <div class="radio">
                                    <label>
                                        <input name="form-field-radio2" type="radio" class="ace" value="en attente" checked disabled>
                                        <span class="lbl"> En attente</span>
                                    </label>
                                </div>

                            </div>

                        </div>
                    </div>
                    <div class="space"></div>
                    <hr>



                </div>
                <div class="space"></div>
                <div class="row">
                    <div class="col-md-4 col-md-offset-1">
                        {#{{ form_row(form.bcclient) }}#}
                        {#{{ form_row(form.verifiedBy) }}#}
                        {#{{ form_row(form.validatedBy) }}#}

                        <a href="{{ path('mission_index') }}" class="btn btn-white btn-info btn-block"><i
                                    class="fa fa-reply"></i> Retour</a>
                    </div>
                    <div class="col-md-4 col-md-offset-1">


                        <button class="btn btn-white btn-success btn-block" type="submit" formnovalidate>
                            <i class="ace-icon fa fa-check"></i>
                            Enregistrer
                        </button>
                    </div>

                </div>
                <div class="space"></div>
                {{ form_widget(form._token) }}

                {{ form_end(form , {'render_rest': false}) }}


            </div>


        </div>

    </div>


    </div>


    </div>
    </div>



{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/jquery.collection.js') }}"></script>

    <script>
        $(document).ready(function () {

            $('.spinner1').ace_spinner({
                value: 100,
                min: 0,
                max: 10000,
                step: 200,
                btn_up_class: 'btn-info',
                btn_down_class: 'btn-info'
            })
                .closest('.ace-spinner')
            ;


        });
    </script>
{% endblock %}